<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.isdl.multigestureforsubjectiveexperimentuntildecember.MainActivity">


    <TextView
        android:id="@+id/lx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lx"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="state"
        android:textSize="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/onoff"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="ON"
        android:textSize="15dp"
        android:layout_alignTop="@+id/lx"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/testtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test text"
        android:textSize="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/deviceTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="25dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/setTime"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="SET TIME"
        android:textSize="15dp"
        android:layout_alignTop="@+id/deviceTime"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        />



    <EditText
        android:id="@+id/IPAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IPAddress"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="CONNECT"
        android:textSize="15dp"
        android:layout_alignTop="@+id/IPAddress"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="version"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="50dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/toRButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to R: 0"
                android:textSize="20dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/upRButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="up R: 0"
                android:textSize="20dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/downRButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="down R: 0"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/toLButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to L: 0"
                android:textSize="20dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/upLButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="up L: 0"
                android:textSize="20dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/downLButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="down L: 0"
                android:textSize="20dp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/toTButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to T: 0"
                android:textSize="20dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/upTButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="up T: 0"
                android:textSize="20dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/downTButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="down T: 0"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/toBButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to B: 0"
                android:textSize="20dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/upBButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="up B: 0"
                android:textSize="20dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:id="@+id/downBButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="down B: 0"
                android:textSize="20dp" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
